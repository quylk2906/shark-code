{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true
  },
  "rewrites": [
    {
      "source": "/sendEmail",
      "function": "sendEmail"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
}
